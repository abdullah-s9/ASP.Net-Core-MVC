@{
    Layout = "~/Views/Shared/_LayoutsAdmin.cshtml";
}
@model SaudiGuide.Models.Events
<br />

<h2 class="text-center">إضافة نشاط سياحي جديد</h2>
<br />
<div class="text-center">
    <form asp-action="Create" method="post" >
    <div class="form-group">
        <label asp-for="Name">اسم النشاط</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Img">الصورة</label>
        <input type="file" asp-for="Img" class="form-control" />
        <span asp-validation-for="Img" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">الوصف</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">السعر</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">إضافة</button>
</form>
</div>